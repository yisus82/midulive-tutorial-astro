---
import { type SpaceXResponse } from '../types/SpaceXResponse';
import LaunchCard from './LaunchCard.astro';

const res = await fetch('https://api.spacexdata.com/v5/launches/query', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({
    query: {},
    options: {
      sort: {
        date_unix: 'desc',
      },
      limit: 10,
    },
  }),
});
const { docs: launches } = (await res.json()) as SpaceXResponse;
---

<div class='grid gap-8 sm:grid-cols-2 lg:grid-cols-3 text-center mt-8'>
  {
    launches.map(({ id, name, links, success, flight_number, details }) => (
      <LaunchCard
        id={id}
        name={name}
        img={links.patch.small}
        success={success}
        flightNumber={flight_number}
        details={details}
      />
    ))
  }
</div>
